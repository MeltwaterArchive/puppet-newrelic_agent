# This file is managed by puppet, do not edit by hand, your changes will be overwitten
# global settings

[global]
newrelic_license_key=<%= @newrelic_license_key %>
poll_interval=60

# logging settings

[loggers]
keys=root

[handlers]
keys=consoleHandler,fileHandler

[formatters]
keys=simpleFormatter

[logger_root]
level=DEBUG
handlers=consoleHandler,fileHandler

[handler_consoleHandler]
class=StreamHandler
level=DEBUG
formatter=simpleFormatter
args=(sys.stdout,)

[handler_fileHandler]
class=FileHandler
level=DEBUG
formatter=simpleFormatter
args=('/var/log/nginx-nr-agent.log','a',)

[formatter_simpleFormatter]
format=%(asctime)s %(name)s [%(levelname)s]: %(message)s
datefmt=

<% @data_sources.sort.each do |key,config| -%>
[<%= key -%>]
<% config.sort.each do |subkey,val| -%>
<%= subkey %>=<%= val %>
<% end -%>
<% end -%>